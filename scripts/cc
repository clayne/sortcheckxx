set -eu
#set -x

if echo "$0" | grep -q ++; then
  exe=g++
else
  exe=gcc
fi

# Why is libtooling interface so useless...
FILES=$(echo "$@" | grep -o '[^ ]\+\.\(cc\|cpp\|c\|cxx\|C\)\( \|$\)' || true)
OPTS=$(echo "$@" | sed -e 's/[^ ]\+\.\(cc\|cpp\|c\|cxx\|C\)\( \|$\)//g')

test -z "$FILES" || $(dirname $0)/../bin/SortChecker $FILES -- $OPTS
/usr/bin/$exe "$@"
